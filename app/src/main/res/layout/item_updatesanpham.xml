<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn loại sản phẩm: "
                android:textSize="24dp"
                android:textColor="#2196F3"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spUpdateChonLoaiSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtSuaTenSanPham"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextvienhong"
            android:hint="Nhập tên sản phẩm" />

        <!-- Updated image link field -->
        <EditText
            android:id="@+id/edtSuaLinkAnhSanPham"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextvienhong"
            android:hint="Nhập link ảnh sản phẩm"
            android:inputType="textUri" />

        <!-- Preview image button -->
        <Button
            android:id="@+id/btnXemAnhSuaSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem trước ảnh"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />

        <!-- Image preview -->
        <ImageView
            android:id="@+id/imgXemTruocSuaSanPham"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="#EEEEEE"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/edtSuaGiaSanPham"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextvienhong"
            android:hint="Nhập giá sản phẩm"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtSuaGiamGia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextvienhong"
            android:hint="Nhập giảm giá"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtSuaSoLuongTrongKho"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextvienhong"
            android:hint="Nhập số lượng trong kho"
            android:inputType="number" />

        <EditText
            android:id="@+id/edtSuaNgaySanXuat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextvienhong"
            android:hint="Nhập ngày sản xuất" />

        <EditText
            android:id="@+id/edtSuaHanSuDung"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittextvienhong"
            android:hint="Nhập hạn sử dụng" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDialodHuySuaSanPham"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bkgcam"
                android:text="Hủy" />

            <Button
                android:id="@+id/btnDialogSuaSanPham"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bkgxanh"
                android:text="Sửa" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>